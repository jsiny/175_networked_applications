<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">Edit</a>
      <form class='inline' action='/<%= file %>/destroy' method='post'>
        <button type='submit'>Delete</button>
      </form>
    </li>
  <% end %>
</ul>

